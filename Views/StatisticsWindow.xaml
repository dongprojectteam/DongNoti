<Window x:Class="DongNoti.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="알람 통계" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/app.ico"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="ModernRaisedButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernOutlinedButton" TargetType="Button" BasedOn="{StaticResource ModernRaisedButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0">
        <Border.Effect>
            <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 필터 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="기간:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"
                           FontSize="12"
                           Foreground="#616161"/>
                <ComboBox x:Name="PeriodComboBox" 
                          Width="150"
                          SelectionChanged="PeriodComboBox_SelectionChanged"
                          Padding="8,6"
                          FontSize="12">
                    <ComboBoxItem Content="전체" Tag="All" IsSelected="True"/>
                    <ComboBoxItem Content="오늘" Tag="Today"/>
                    <ComboBoxItem Content="이번 주" Tag="ThisWeek"/>
                    <ComboBoxItem Content="이번 달" Tag="ThisMonth"/>
                </ComboBox>
            </StackPanel>

            <!-- 통계 내용 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 요약 통계 -->
                    <GroupBox Header="요약" Padding="10" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="총 트리거" 
                                           FontSize="11" 
                                           Foreground="#757575"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="TotalTriggersText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           Foreground="#2196F3"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="성공" 
                                           FontSize="11" 
                                           Foreground="#757575"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="SuccessfulTriggersText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           Foreground="#4CAF50"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="놓친 알람" 
                                           FontSize="11" 
                                           Foreground="#757575"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="MissedTriggersText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           Foreground="#F44336"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 알람별 통계 -->
                    <GroupBox Header="알람별 통계" Padding="10">
                        <DataGrid x:Name="AlarmStatsDataGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowHeaderWidth="0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  AlternatingRowBackground="#F5F5F5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="알람 제목" Binding="{Binding AlarmTitle}" Width="*"/>
                                <DataGridTextColumn Header="트리거 횟수" Binding="{Binding TriggerCount}" Width="120"/>
                                <DataGridTextColumn Header="놓친 횟수" Binding="{Binding MissedCount}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- 버튼 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="닫기" 
                        Click="Close_Click" 
                        Style="{StaticResource ModernRaisedButton}"
                        MinWidth="65" MinHeight="30"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
