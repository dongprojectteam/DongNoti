<Window x:Class="DongNoti.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:DongNoti.Models"
        Title="설정" Height="750" Width="550"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/app.ico"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="ModernRaisedButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernOutlinedButton" TargetType="Button" BasedOn="{StaticResource ModernRaisedButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0">
        <Border.Effect>
            <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 스크롤 가능한 내용 영역 -->
            <ScrollViewer Grid.Row="0" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="0,0,8,0"
                          CanContentScroll="False">
                <StackPanel Margin="0,0,8,0">

                    <!-- 자동 실행 -->
                    <CheckBox x:Name="RunOnStartupCheckBox" 
                             Content="Windows 시작 시 자동 실행"
                             Margin="0,0,0,15"
                             Checked="RunOnStartupCheckBox_Checked"
                             Unchecked="RunOnStartupCheckBox_Unchecked"/>

                    <!-- 시작 시 트레이로 숨김 -->
                    <CheckBox x:Name="HideToTrayOnStartupCheckBox" 
                             Content="시작 시 트레이로 숨김"
                             Margin="0,0,0,15"/>

                    <!-- 종료 시 트레이로 최소화 -->
                    <CheckBox x:Name="MinimizeToTrayCheckBox" 
                             Content="종료 시 트레이로 최소화"
                             Margin="0,0,0,15"/>

                    <!-- 로그 활성화 -->
                    <StackPanel Margin="0,0,0,15">
                <CheckBox x:Name="EnableLoggingCheckBox" 
                         Content="로그 파일 생성 (디버깅용)"
                         Margin="0,0,0,5"/>
                <CheckBox x:Name="ShowUILogCheckBox" 
                         Content="UI 로그 창 표시"
                         Margin="0,5,0,5"
                         Checked="ShowUILogCheckBox_Checked"
                         Unchecked="ShowUILogCheckBox_Unchecked"/>
                <StackPanel Orientation="Horizontal" Margin="20,5,0,0">
                    <Button Content="로그 파일로 저장" 
                            Click="FlushLogs_Click" 
                            Style="{StaticResource ModernOutlinedButton}"/>
                    <Button Content="로그 파일 열기" 
                            Click="OpenLogFile_Click" 
                            Style="{StaticResource ModernOutlinedButton}"
                            Margin="5,0,0,0"/>
                    <Button Content="데이터 폴더 열기" 
                            Click="OpenDataFolder_Click" 
                            Style="{StaticResource ModernOutlinedButton}"
                            Margin="5,0,0,0"/>
                    <TextBlock x:Name="LogBufferCountText" 
                               Text="(버퍼: 0개)" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Foreground="Gray"
                               FontSize="11"/>
                    </StackPanel>
                    </StackPanel>

                    <!-- 집중 모드 설정 -->
                    <GroupBox Header="집중 모드 프리셋" Padding="10" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 설명 및 버튼 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="빠른 실행을 위한 시간 프리셋을 관리합니다" 
                                   FontSize="11" 
                                   Foreground="#757575"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <Button Content="+ 추가" 
                                Click="AddPreset_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="8,4"
                                FontSize="11"
                                MinWidth="60"/>
                        <Button Content="기본값으로 초기화" 
                                Click="ResetPresets_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="8,4"
                                FontSize="11"
                                Margin="5,0,0,0"
                                MinWidth="100"/>
                    </StackPanel>
                    
                    <!-- 프리셋 목록 -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  MaxHeight="400"
                                  Margin="0,0,0,10">
                        <ItemsControl x:Name="PresetsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10,8"
                                            Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 기본값 표시 -->
                                            <RadioButton Grid.Column="0"
                                                         x:Name="DefaultRadioButton"
                                                         IsChecked="{Binding IsDefault, Mode=TwoWay}"
                                                         Checked="DefaultPreset_Checked"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         GroupName="DefaultPreset"/>
                                            
                                            <!-- 프리셋 정보 -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#212121"/>
                                                <TextBlock Text="{Binding Minutes, StringFormat={}{0}분}" 
                                                           FontSize="11"
                                                           Foreground="#757575"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- 기본값 라벨 -->
                                            <TextBlock Grid.Column="2"
                                                       Text="(기본값)"
                                                       FontSize="10"
                                                       Foreground="#2196F3"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,12,0"
                                                       Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            
                                            <!-- 삭제 버튼 -->
                                            <Button Grid.Column="3"
                                                    Content="삭제"
                                                    Click="DeletePreset_Click"
                                                    Style="{StaticResource ModernOutlinedButton}"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    MinWidth="50"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 안내 텍스트 -->
                    <TextBlock Grid.Row="2"
                               Text="※ 라디오 버튼을 선택하여 기본 프리셋을 설정할 수 있습니다" 
                               FontSize="10" 
                               Foreground="#9E9E9E"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"/>
                    </Grid>
                    </GroupBox>

                    <!-- 알람 카테고리 -->
                    <GroupBox Header="알람 카테고리" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="알람을 분류하기 위한 카테고리를 관리합니다" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="NewCategoryTextBox" 
                                 Width="150"
                                 Padding="8,6"
                                 FontSize="12"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"
                                 Margin="0,0,8,0"/>
                        <Button Content="추가" 
                                Click="AddCategory_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="8,4"
                                FontSize="12"
                                MinWidth="60"
                                Margin="0,0,8,0"/>
                        <Button Content="초기화" 
                                Click="ResetCategories_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="8,4"
                                FontSize="12"
                                MinWidth="60"/>
                    </StackPanel>
                    <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CategoriesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10,8"
                                            Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding}" 
                                                       FontSize="13"
                                                       VerticalAlignment="Center"/>
                                            <Button Grid.Column="1"
                                                    Content="삭제"
                                                    Click="DeleteCategory_Click"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    MinWidth="50"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ModernOutlinedButton}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding}" Value="기본">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    </GroupBox>

                    <!-- 알람 백업/복원 -->
                    <GroupBox Header="알람 백업/복원" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="알람 데이터를 파일로 내보내거나 가져올 수 있습니다" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="알람 내보내기" 
                                Click="ExportAlarms_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="12,6"
                                FontSize="12"
                                MinWidth="120"
                                Margin="0,0,8,0"/>
                        <Button Content="알람 가져오기" 
                                Click="ImportAlarms_Click" 
                                Style="{StaticResource ModernOutlinedButton}"
                                Padding="12,6"
                                FontSize="12"
                                MinWidth="120"/>
                        </StackPanel>
                    </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- 버전 정보 -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock x:Name="VersionTextBlock"
                           Text="DongNoti v1.0.4.0" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#616161"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Windows 11용 알람 프로그램" 
                           FontSize="11" 
                           Foreground="#9E9E9E"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,3"/>
                <TextBlock Text="© 2026 DongNoti" 
                           FontSize="10" 
                           Foreground="#BDBDBD"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 버튼 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="확인" 
                        Click="OK_Click" 
                        Margin="5,0" 
                        IsDefault="True"
                        Style="{StaticResource ModernRaisedButton}"
                        MinWidth="65" MinHeight="30"/>
                <Button Content="취소" 
                        Click="Cancel_Click" 
                        Margin="5,0" 
                        IsCancel="True"
                        Style="{StaticResource ModernOutlinedButton}"
                        MinWidth="65" MinHeight="30"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
