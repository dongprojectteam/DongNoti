<Window x:Class="DongNoti.Views.DdayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:DongNoti.Models"
        xmlns:converters="clr-namespace:DongNoti.Converters"
        Title="Dday" Height="400" Width="300"
        WindowStartupLocation="Manual"
        Icon="/Resources/app.ico"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Closing="Window_Closing"
        AllowsTransparency="False">
    <Window.Resources>
        <ContextMenu x:Key="DdayItemContextMenu">
            <MenuItem x:Name="RegisterAsAlarmMenuItem" Header="ì•ŒëžŒìœ¼ë¡œ ë“±ë¡"/>
            <MenuItem Header="Dday ë³µì œí•˜ê¸°"/>
            <MenuItem Header="ì‚­ì œ"/>
        </ContextMenu>
        <converters:CategoryColorConverter x:Key="CategoryColorConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- ì»¤ìŠ¤í…€ íƒ€ì´í‹€ ë°” -->
        <Border Grid.Row="0" Background="#2196F3" Padding="12,8" MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="DDay ëª©ë¡" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <Button x:Name="AddDdayButton"
                        Grid.Column="1"
                        Content="+"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,0"
                        Cursor="Hand"
                        Click="AddDdayButton_Click"
                        Margin="0,0,4,0"
                        ToolTip="ìƒˆ Dday ë“±ë¡">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Content="âœ•"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Dday ëª©ë¡ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="DdayListBox" 
                     SelectionMode="Single"
                     BorderThickness="0"
                     Background="Transparent"
                     SelectionChanged="DdayListBox_SelectionChanged"
                     PreviewMouseLeftButtonDown="DdayListBox_PreviewMouseLeftButtonDown">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="Stretch"
                                Padding="12,10"
                                Background="{Binding CategoryDisplay, Converter={StaticResource CategoryColorConverter}, ConverterParameter=Background}"
                                BorderBrush="{Binding CategoryDisplay, Converter={StaticResource CategoryColorConverter}, ConverterParameter=BorderBrush}"
                                BorderThickness="{Binding CategoryDisplay, Converter={StaticResource CategoryColorConverter}, ConverterParameter=BorderThickness}">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Title}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#212121"/>
                                <TextBlock Text="{Binding DdayDisplayString}" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DaysRemaining}" Value="0">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding TargetDate, StringFormat=yyyy-MM-dd}" 
                                           FontSize="11" 
                                           Foreground="#757575"
                                           Margin="0,2,0,0"/>
                                <TextBlock x:Name="MemoTextBlock"
                                           Text="{Binding Memo}" 
                                           FontSize="12" 
                                           Foreground="#757575"
                                           Margin="0,6,0,0"
                                           TextWrapping="Wrap"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="ContextMenu" Value="{StaticResource DdayItemContextMenu}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </ScrollViewer>
        
        <!-- ë¹ˆ ìƒíƒœ ë©”ì‹œì§€ -->
        <StackPanel x:Name="EmptyStatePanel"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"
                   IsHitTestVisible="False">
            <TextBlock Text="ðŸ“…"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Opacity="0.3"/>
            <TextBlock Text="Ddayê°€ ì—†ìŠµë‹ˆë‹¤"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#9E9E9E"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
